// - default css from https://alexeykhr.github.io/vue-stripe-menu/#example
// - custom css

// Limit the width to 1024px and center
.vsm-menu
  ul
    max-width 1024px
    center()
    li:nth-child(2)
      center()

// Let's simplify the work with menu items (logo, menu, buttons, etc)
.vsm-root
  display grid
  grid-template-columns repeat(3, 1fr)

// Move all the content to the right and reduce the logo
.logo-section
  flex 1 1 auto
  img
    user-select none

// All menu items (element props: a, button, span, etc) are
// made the same in style
.vsm-section_menu
  center()
  > *
    padding 0 25px

// Styles for Dropdown Content:
.wrap-content
  padding 30px
  // Set the width manually so that it does not depend
  // on changing content
  width 482px

.content
.content--secondary
.mobile-content
  padding var(--spacing-7) var(--spacing-8)

.content--secondary
  padding-top 10px
  padding-bottom 10px

.dropdown-wrap__content
  display flex
  align-items center
  color currentColor
  text-decoration none
  padding 10px 5px 10px 0
  &:not(:last-child)
    margin-bottom 5px
  &.type1
    span
      margin-left 10px
  &.type2
    align-items flex-start
    > div
      margin-left 10px
    .content--bottom
      color var(--secondary)

.dropdown-container
  width 482px

// Custom css tweaks
.vsm-background
.vsm-arrow
.vsm-mob-content__wrap
  background var(--gray-100) !important

.vsm-link
  color currentColor !important

.content--secondary
  background var(--trans-gray-100) !important
  border-radius 0 0 6px 6px // fix white corner
  overflow hidden

// fix white bg color when hover different nav items
.vsm-dropdown-container > *
  background var(--gray-100) 
    
.vsm-dropdown-content
  box-shadow var(--elevation-4)

.vsm-section
  align-items center

.dropdown-wrap
  display grid
  grid-template-columns 50% 50%
  column-gap var(--spacing-6)
  .overline
    color var(--white-300)
  .title
    color var(--white)
    margin-top var(--spacing-3)
  .subtitle
    color var(--white-400)
    margin-top var(--spacing-3)

.graphics
  display grid
  place-self center

.graphics__item
  height auto
  width 60%
  margin-bottom 15%

@media $breakpoint-large-max
  .vsm-root
    display flex
    flex-direction row
    align-items center
    justify-content space-between