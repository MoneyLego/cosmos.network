:root
  --container-mw-lg 74rem

html
  font 400 100%/1.5 $font-family-sans-serif
  font-feature-settings 'kern' on, 'liga' on, 'calt' on, 'zero' on
  // TODO: figure out why nuxt isn't using postcss-font-variant to generate these vendor prefixes
  -webkit-font-feature-settings 'kern' on, 'liga' on, 'calt' on, 'zero' on
  text-size-adjust 100%
  -moz-osx-font-smoothing grayscale
  font-smoothing antialiased
  font-variant-ligatures contextual common-ligatures
  font-kerning normal
  text-rendering optimizeLegibility

@supports (font-variation-settings: normal)
  html
    font-family $font-family-sans-serif-var
    font-weight $font-weight-normal-base

body
  overflow-x hidden
  margin 0

@media $breakpoint-large-max
  body.mobile-nav-open
    overflow hidden

*,
*::before,
*::after
  box-sizing border-box
  margin 0

::selection
  background var(--white)
  color var(--black)

a
  text-decoration none

button
  appearance none


// TODO: clean up global .dark-mode, .light-mode
.dark-mode
  html,
  body
    background-color var(--black)
    color var(--white)
  a,
  label
    color var(--white)

.light-mode
  html,
  body
    background-color var(--trans-gray-950)
    color var(--black)
  a,
  label
    color var(--black)
