/*

   LINKS
   Docs: http://tachyons.io/docs/elements/links/

*/

.tm-link
  cursor pointer
  text-decoration none
  transition all .2s $ease-out
  outline-color rgba(64, 179, 255, 0.92) // temp

.tm-link:link,
.tm-link:visited
  transition all .2s $ease-out

.tm-link:hover
  transition all .2s $ease-out, opacity .4s ease-out
  &.tm-link-underline-hover
    text-decoration underline

.tm-link:active
  opacity 0.7
  transition-duration 0s

.tm-link:focus
  transition all .2s $ease-out
  outline 1px dotted currentColor


/* Disclosure icons */
.tm-link-disclosure
  transition transform .2s $ease-out
  &:last-child
    margin-left var(--spacing-1)

.tm-link:hover,
.tm-link:focus
  .tm-link-disclosure
    transform translate(50%, 50%)
